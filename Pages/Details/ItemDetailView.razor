                            {
                                <div>
                                    <i class="fa fa-star"></i>
                                    <b class="text">@ProjectRepo.GitHubRepoInfo.Stars</b>
                                </div>

                            }
                        </div>

                        @if (this.ProjectRepo.GitHubRepoInfo.ProjectName.IsValidString())
                        {
                            var repo = this.ProjectRepo.GitHubRepoInfo.ProjectUrl;
