@code {
    public List<string> categoriesFinal = new List<string>();
    protected override async void OnInitialized()
    {
        base.OnInitialized();

        var hubSettings = await GitHubSettings.FetchGithubSettingsAsync();
        categoriesFinal = hubSettings.Categories.Split(',').ToList();
        StateHasChanged();
    }
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
}
